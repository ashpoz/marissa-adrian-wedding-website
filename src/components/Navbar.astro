---
import logoIcon from "@assets/icons/logo-burgundy.svg";

const menuItems = [
  {
    title: "Our Story",
    path: "/our-story",
  },
  {
    title: "Schedule",
    path: "/schedule",
  },
  {
    title: "Registry",
    path: "https://www.myregistry.com/wedding-registry/marissa-caputo-and-adrian-haynes-austin-tx/3775564/giftlist",
  },
  {
    title: "Where to Stay",
    path: "/where-to-stay",
  },
  {
    title: "Things to Do",
    path: "/things-to-do",
  },
  {
    title: "FAQs",
    path: "/faqs",
  },
  {
    title: "RSVP",
    path: "/rsvp",
  },
];
---

<nav class="p-4">
  <ul
    class="container font-serif mx-auto flex flex-col lg:flex-row lg:gap-3 justify-evenly text-lg"
  >
    <li class="basis-1/5">
      <a href="/">
        <img src={logoIcon} alt="" />
      </a>
    </li>
    {
      // TODO: Add active class to current page
      // TODO: Add hover effect
      // TODO: Add mobile menu
      menuItems.map((item, index) =>
        menuItems.length - 1 === index ? (
          <li>
            <a
              href={item.path}
              class="flex px-10 py-3 text-white bg-redwood hover:bg-redwood-dark"
            >
              {item.title}
            </a>
          </li>
        ) : (
          <li>
            <a
              href={item.path}
              class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900"
            >
              {item.title}
            </a>
          </li>
        )
      )
    }
  </ul>
</nav>
