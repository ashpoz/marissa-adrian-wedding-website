---
import logoIcon from "@assets/icons/logo-burgundy.svg";

const menuItems = [
  {
    title: "Our Story",
    path: "/our-story",
  },
  {
    title: "Schedule",
    path: "/schedule",
  },
  {
    title: "Registry",
    path: "https://www.myregistry.com/wedding-registry/marissa-caputo-and-adrian-haynes-austin-tx/3775564/giftlist",
  },
  {
    title: "Where to Stay",
    path: "/where-to-stay",
  },
  {
    title: "Things to Do",
    path: "/things-to-do",
  },
  {
    title: "FAQs",
    path: "/faqs",
  },
  {
    title: "RSVP",
    path: "/rsvp",
  },
];
---

<nav class="p-4">
  <div
    class="container font-serif mx-auto flex lg:gap-3 text-2xl lg:text-sm items-center xl:text-lg"
  >
    <div class="basis-1/5">
      <a href="/">
        <img src={logoIcon} alt="" />
      </a>
    </div>
    <div class="ml-auto z-10 lg:hidden">
      <button
        ><div class="space-y-2">
          <span class="block w-8 h-0.5 bg-gray-600"></span>
          <span class="block w-8 h-0.5 bg-gray-600"></span>
          <span class="block w-5 h-0.5 bg-gray-600"></span>
        </div>
      </button>
    </div>
    <ul
      class="absolute w-full h-full left-0 top-0 flex flex-col hidden justify-evenly text-center bg-burgundy overflow-auto lg:bg-transparent lg:items-center lg:flex-row lg:relative lg:flex lg:ml-auto lg:text-left px-6"
    >
      {
        // TODO: Add active class to current page
        // TODO: Add hover effect
        menuItems.map((item, index) =>
          menuItems.length - 1 === index ? (
            <li>
              <a
                href={item.path}
                class="flex px-10 py-3 text-white bg-redwood hover:bg-redwood-dark"
              >
                {item.title}
              </a>
            </li>
          ) : (
            <li>
              <a
                href={item.path}
                class="flex lg:px-3 py-2 text-white lg:text-gray-600 hover:text-gray-900"
              >
                {item.title}
              </a>
            </li>
          )
        )
      }
    </ul>
  </div>
</nav>

<script>
  const menuButton: HTMLButtonElement = document.querySelector(
    "button"
  ) as HTMLButtonElement;
  const menu: HTMLUListElement = document.querySelector(
    "ul"
  ) as HTMLUListElement;

  menuButton.addEventListener("click", () => {
    menu.classList.toggle("hidden");
    document.body.classList.toggle("overflow-hidden");
  });
</script>
