---
import "@fontsource-variable/noto-serif-display";
import "@fontsource/merriweather";
import "../styles/global.css";
import Navbar from "@components/Navbar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="min-h-full">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Adrian & Marissa are getting married on November 11th, 2023 in Austin TX"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-XE24XZYQ7M"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-XE24XZYQ7M");
    </script>
  </head>
  <body>
    <header>
      <Navbar />
    </header>
    <slot />
  </body>
</html>
