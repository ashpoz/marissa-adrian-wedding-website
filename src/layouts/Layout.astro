---
import "@fontsource-variable/noto-serif-display";
import "@fontsource/merriweather";
import "../styles/global.css";
import Navbar from "@components/Navbar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const isProd = import.meta.env.PROD;
const gtmHTMLString = `window.dataLayer = window.dataLayer || []; window.gtag = function gtag() { dataLayer.push(arguments); }; gtag("js", new Date());gtag("config", "G-XE24XZYQ7M");`;
---

<!DOCTYPE html>
<html lang="en" class="min-h-full">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Adrian & Marissa are getting married on November 11th, 2023 in Austin TX"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:title"
      content="Adrian & Marissa are getting married on November 11th, 2023 in Austin TX"
    />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/social-media-image.jpg" />
    <title>{title}</title>
    <!-- Google tag (gtag.js) -->
    {
      isProd && (
        <>
          <script
            type="text/partytown"
            src="https://www.googletagmanager.com/gtag/js?id=G-XE24XZYQ7M"
          />
          <script type="text/partytown" set:html={gtmHTMLString} />
        </>
      )
    }
  </head>
  <body>
    <header>
      <Navbar />
    </header>
    <slot />
  </body>
</html>
