---
import Layout from "@layouts/Layout.astro";
import heroImage from "@assets/images/photo1.jpg";
---

<Layout title="Marissa and Adrian's Wedding">
  <main class="container mx-auto px-4">
    <div class="md:flex items-center py-10">
      <div class="flex-1">
        <div>
          <h1 class="leading-10 font-serif">
            <span class="text-6xl">Marissa & Adrian</span>
            <br />
            <span class="text-4xl">are getting married!</span>
          </h1>
        </div>
        <div class="text-xl leading-relaxed font-serif">
          <p>5:00pm - 10:00pm</p>
          <p>November 11th, 2023</p>
          <p>The Riley Building</p>
          <p>Austin, TX</p>
          <div class="py-6">
            <a
              class="px-5 py-3 border-solid rounded-md text-white bg-redwood border-2"
              href="/rsvp">RSVP</a
            >
            <a
              class="px-5 py-3 border-solid rounded-md text-redwood border-color-redwood border-2"
              href="#">Add to Calender</a
            >
          </div>
        </div>
      </div>
      <div class="flex-1 py-4">
        <img
          src={heroImage}
          class="object-cover h-[40rem] w-[50rem] rounded-t-[12.5rem]"
          alt="Marissa and Adrian selfie."
        />
      </div>
    </div>
  </main>
</Layout>
